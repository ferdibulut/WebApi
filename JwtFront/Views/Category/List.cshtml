@model List<CategoryListResponseModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="Create" asp-controller="Category">Kategory Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Definition</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Count>0)
        {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Definition</td>
                <td ><a asp-action="Remove" asp-route-id="@item.Id" asp-controller="Category" class="btn btn-danger btn-sm">Sil</a></td>
            </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">Data Bulunamadı</td>
            </tr>
        }


    </tbody>
</table>


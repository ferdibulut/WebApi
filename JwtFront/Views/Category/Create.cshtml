@model CategoryCreateRequestModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form accept-charset="Create" asp-controller="Category"method="post">
    <div class="form-group mb-3">
        <input class="form-control" type="text" asp-for="@Model.Definition" placeholder="Kategory adı"/>
    </div>
    <div class="form-group mb-3">
        <button type="submit" class="btn btn-info">Kaydet</button>
    </div>
</form>
